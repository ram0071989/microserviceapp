<?xml version = '1.0' encoding = 'UTF-8'?>
<weblogic-web-app>
    <weblogic-version>12.2.1.3</weblogic-version>
    <context-root>/popcorn</context-root>
    <container-descriptor>
        <prefer-web-inf-classes>false</prefer-web-inf-classes>
        <prefer-application-packages>
            <package-name>org.slf4j.*</package-name>
            <package-name>org.codehaus.stax2.*</package-name>
            <package-name>com.google.common.*</package-name>
            <package-name>org.bouncycastle.*</package-name>
            <package-name>javax.persistence.*</package-name>
            <package-name>javassist</package-name>

            <!-- Add application provided Validation library-->
            <package-name>javax.validation.*</package-name>
            <package-name>javax.validation.bootstrap.*</package-name>
            <package-name>javax.validation.constraints.*</package-name>
            <package-name>javax.validation.groups.*</package-name>
            <package-name>javax.validation.metadata.*</package-name>
            <package-name>javax.validation.spi.*</package-name>

            <!-- Add application provided Hibernate library-->
            <package-name>org.hibernate.*</package-name>
            <package-name>org.hibernate.ejb.*</package-name>
            <package-name>org.hibernate.jpa.*</package-name>
            <package-name>org.hibernate.validator.*</package-name>
            <package-name>org.hibernate.validator.internal.*</package-name>
            <package-name>org.hibernate.validator.internal.engine.*</package-name>
            <package-name>org.hibernate.validator.internal.engine.resolver.*</package-name>
        </prefer-application-packages>
        <prefer-application-resources>
            <resource-name>org.springframework.*</resource-name>
            <resource-name>javax.persistence.*</resource-name>
            <resource-name>javax.validation.*</resource-name>
            <resource-name>org.hibernate.*</resource-name>
            <resource-name>org.hibernate.jpa.*</resource-name>
            <resource-name>org.hibernate.jpa.HibernatePersistenceProvider.*</resource-name>
        </prefer-application-resources>
    </container-descriptor>
</weblogic-web-app>